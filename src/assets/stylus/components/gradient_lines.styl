.left-gradient-line
    z-index $before-all
    background $linear-dark-gradient
    opacity .1
    width 70%
    height 50px
    position absolute
    bottom 37%
    left -35% 
    transform rotate(52deg)

    &:before
        content ''
        width 100%
        height 65px
        background $linear-pseudo-gradient
        filter blur(3px)
        position: absolute
        top 100%

    &:after
        content ''
        width 100%
        height 65px
        background $linear-pseudo-gradient
        filter blur(3px)
        position: absolute
        bottom 100%


.center-gradient-line
    z-index 9999
    background $linear-dark-gradient
    opacity .05
    width 70%
    height 65px
    position absolute
    top 3%
    left -38% 
    transform rotate(52deg)


@media screen and (min-width : 800px)
    .center-gradient-line
        height 140px
        top 0%
        left -15% 
