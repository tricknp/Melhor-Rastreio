.icon
    width 100%
    height 40px
    z-index: $index-after

    
    &.active
        filter: invert(0) sepia(0) saturate(100) hue-rotate(-50deg);
    
    &.blue
        filter: invert(0.5) sepia(1) saturate(23) hue-rotate(202deg);

    &.orange
        filter: invert(0) sepia(1) saturate(10) hue-rotate(-25deg);

    &.black
        filter: invert(1) sepia(0) saturate(0) hue-rotate(0deg);

