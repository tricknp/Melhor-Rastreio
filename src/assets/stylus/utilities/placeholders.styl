.row
    display flex;
    flex-direction row;

.column
    display flex;
    flex-direction column;

.center 
    display flex
    align-items center
    justify-content center

.aligned-center-row
    @extend .row;
    align-items center;

.aligned-center-column
    @extend .column;
    align-items center;

.fully-centralized-row
    @extend .aligned-center-row;
    justify-content center;

.fully-centralized-column
    @extend .aligned-center-column;
    justify-content center;

.hamburger-bar
    width 100%;
    height 2px;
    background $white;
    transition $default-transition $default-duration;

.filled-button
    background $white
    color $primary-color
    transition $default-transition $default-duration
    border $default-border $white
    border-radius $default-radius
    box-shadow $default-shadow
    cursor pointer
    &:hover
        background transparent
        color $white        


